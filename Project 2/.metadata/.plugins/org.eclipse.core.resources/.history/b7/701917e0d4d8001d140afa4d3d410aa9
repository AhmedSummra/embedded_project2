#include<avr/io.h>
#include<avr/delay.h>
#include<avr/interrupt.h>

unsigned char tick=0,a=0,b=0,c=0,d=0,i=0,k=0;

void set_timer(void){
 TCCR1B=(1<<WGM12)|(1<<CS10)|(1<<CS12);
 TCNT1=0;
 OCR1A=1000;
 TIMSK|=(1<<OCIE1A);
}

void set_ex_interrupt0(void){
	MCUCR|=(1<<ISC01);
	GICR|=(1<<INT0);
}

void set_ex_interrupt1(void){
	MCUCR|=(1<<ISC10)|(1<<11);
	GICR|=(1<<INT1);
}

void set_ex_interrupt2(void){
	GICR|=(1<<INT2);
}

int main(void){
	DDRC=0x0f;
	DDRA=0x3f;
	 SREG|=(1<<7);
	DDRD&=~(1<<PD2);
	DDRD&=~(1<<PD3);
	DDRB&=~(1<<PB2);
	set_timer();
	set_ex_interrupt0();
	set_ex_interrupt1();
	set_ex_interrupt2();

	while(1){
		PORTC=(PORTC&0x0f)|a;
		PORTA|=(1<<PA0);
	    _delay_ms(2);
	    PORTA&=~(1<<PA0);
		PORTC&=0xf0;
	    PORTC=(PORTC&0x0f)|b;
		PORTA|=(1<<PA1);
	    _delay_ms(2);
		PORTA&=~(1<<PA1);
		PORTC&=0xf0;
		PORTC=(PORTC&0x0f)|c;
		PORTA|=(1<<PA2);
	    _delay_ms(2);
	    PORTA&=~(1<<PA2);
	    PORTC&=0xf0;
	    PORTC=(PORTC&0x0f)|d;
	    PORTA|=(1<<PA3);
	    _delay_ms(2);
	    PORTA&=~(1<<PA3);
	    PORTC&=0xf0;
	    PORTC=(PORTC&0x0f)|i;
	    PORTA|=(1<<PA4);
	    _delay_ms(2);
	    PORTA&=~(1<<PA4);
	    PORTC&=0xf0;
	    PORTC=(PORTC&0x0f)|k;
	    PORTA|=(1<<PA5);
	    _delay_ms(2);
	    PORTA&=~(1<<PA5);
	    PORTC&=0xf0;

	}
	return 0;
}

ISR(TIMER1_COMPA_vect){

	a++;
	if(a==10){
		b++;
		a=0;
	}
	if(b==6){
		c++;
		b=0;
	}
	if(c==10){
		d++;
		c=0;
	}
	if(d==6){
		i++;
		d=0;
	}
	if(i==10){
		k++;
		i=0;
	}
	if(k==10){
		a=b=c=d=i=k=0;
	}


}

ISR(INT0_vect){
	a=b=c=d=i=k=0;
	TCNT1=0;
	GIFR|=(1<<INT0);
}

ISR(INT1_vect){
	TIMSK&=~(1<<OCIE1A);
	TCNT1=0;
	GIFR|=(1<<INT1);
}

ISR(INT2_vect){
	TIMSK|=(1<<OCIE1A);
	TCNT1=0;
	GIFR|=(1<<INT2);
}


