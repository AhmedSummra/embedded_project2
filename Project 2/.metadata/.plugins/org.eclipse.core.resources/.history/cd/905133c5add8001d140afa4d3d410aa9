#include<avr/io.h>
#include<avr/delay.h>
#include<avr/interrupt.h>

unsigned char tick=0,tock=1,i=0,a=0;

void set_timer(void){
 TCCR1B=(1<<WGM12)|(1<<CS10)|(1<<CS12);
 TCNT1=0;
 OCR1A=100;
 TIMSK|=(1<<OCIE1A);
 SREG|=(1<<7);
}

int main(void){
	DDRC=0x0f;
	DDRA=0x3f;
	set_timer();

	while(1){

PORTA|=(1<<PC0);
PORTA|=(1<<PC1);
_delay_ms(2);
PORTA&=~(1<<PC1);
PORTA|=(1<<PC2);
_delay_ms(2);
PORTA&=~(1<<PC2);
PORTA|=(1<<PC3);
_delay_ms(2);
PORTA&=~(1<<PC3);
PORTA|=(1<<PC4);
_delay_ms(2);
PORTA&=~(1<<PC4);
PORTA|=(1<<PC5);
_delay_ms(2);
PORTA&=~(1<<PC5);

	}
	return 0;
}

ISR(TIMER1_COMPA_vect){
tick++;
PORTC&=0xf0;
if(tick==10){
	tick=0;
}
PORTC=(PORTC&0x0f)|tick;
}








